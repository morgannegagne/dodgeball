<table class="table table-hover text-center">
  <thead>
    <tr>
      <th >Rank</th>
      <th>Name</th>
      <th>Manager</th>
      <th>Wins</th>
      <th>Losses</th>
    </tr>
  </thead>
  <tbody>
    <% league.teams.order(wins: :desc).each_with_index do |team, index| %>
    <tr>
        <td class="text-left"><%= index + 1 %></td>
        <td class="text-left"> <%= link_to team.name, team_path(team) %> </td>
        <td class="text-left"> <%= team.user.name %> </td>
        <td class="text-left"> <%= team.wins %> </td>
        <td class="text-left"> <%= team.losses %> </td>
    </tr>
    <% end %>

  </tbody>
</table>
