<% if @user.errors %>
  <% @user.errors.full_messages.each do |message| %>
  <p><%= message %></p>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label "Username: " %>
  <%= f.text_field :name %> <br>
  <%= f.label "Password" %>
  <%= f.password_field :password %> <br>
  <%= f.label "Enter Password Again: "%>
  <%= f.password_field :password_confirmation %> <br>
  <%= f.submit %>
<% end %>
