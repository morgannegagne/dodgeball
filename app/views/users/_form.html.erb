<% if @user.errors %>
  <% @user.errors.full_messages.each do |message| %>
  <p><%= message %></p>
  <% end %>
<% end %>


<div class="row">
  <div class="col-sm-3"></div>
   <div class="col-sm-6 text-center well">
     <h3>Sign Up for Dodgeball!</h3>
     <%= form_for @user do |f| %>
     <div class="form-group">
       <%= f.label "Username: " %>
       <%= f.text_field :name %>
     </div>
     <div class="form-group">
       <%= f.label "Password: " %>
       <%= f.password_field :password %>
     </div>

     <div class="mx-auto" style="width: 610px;">
       <%= f.label "Password Confirmation: "%>
       <%= f.password_field :password_confirmation %> <br>
     </div>
     <div class="mx-auto" style="width: 760px;">
       <%= f.submit class: "btn btn-primary" %>
     </div>



     <% end %>
   </div>
   </div>
</div>
