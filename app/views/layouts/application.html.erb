<!DOCTYPE html>
<html>
  <head>
    <title>Let's Play Dodgeball!</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="fluid-container">
      <h1 class="text-danger">Dodgeball!</h1>
    </div>

    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <% if current_user %>
            <p class="navbar-brand"><%= link_to "Hi, #{current_user.name}", user_team_path(current_user, current_user.team) %></p>


          <% end %>
        </div>
        <ul class="nav navbar-nav">
          <% if !logged_in? %>
            <li><%= link_to "Sign Up", new_user_path %></li>
            <li><%= link_to "Log In", login_path%></li>
          <% else %>
            <li><%= link_to "Teams", user_team_path(current_user, current_user.team) %></li>
            <li><%= link_to "Play Dodgeball!", new_match_path %> </li>
            <li><%= link_to "All League Standings", leagues_path %> </li>
            <li><%= link_to "Sign Out", logout_path, method: :delete %> </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
