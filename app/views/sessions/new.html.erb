<%= form_tag '/login' do %>

<% if flash[:message] %>
  <p><%= flash[:message] %></p>
<% end %>

<div>
  <label for="username">Username</label>
  <%= text_field_tag :'user[name]' %>
  <label for="username">Password</label>
  <%= password_field_tag :'user[password]' %>
</div>

<%= submit_tag 'Login' %>
<% end %>
