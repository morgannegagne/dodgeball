<h1>Play a Match!</h1>

<h3>Choose your opponent: </h3>

<%= form_tag(new_match_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search for an opponent" %>
    <%= submit_tag "Search"%>
<% end %>

<ul>
<% @users.each do |user| %>
<li><%= user.name  %>
  <%= button_to "Challenge #{user.name}!", action: 'create', method: 'post', params: { user2: user.id } %></li>
<% end %>
</ul>
